{
	"name": "student-mgmt-backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"license": "MIT",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "env NODE_ENV=development nest start --watch",
		"start:demo": "env NODE_ENV=demo nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:main": "env NODE_ENV=demo node dist/src/main",
		"start:prod": "env NODE_ENV=production node dist/src/main",
		"lint": "eslint src test --ext .ts,.tsx",
		"lint:fix": "eslint src test --ext .ts,.tsx --fix",
		"prettier:check": "prettier --check **/*",
		"prettier:write": "prettier --write **/*",
		"test": "env NODE_ENV=testing jest --config ./test/jest-unit.json",
		"test:watch": "env NODE_ENV=testing jest --watch --config ./test/jest-unit.json",
		"test:cov": "env NODE_ENV=testing jest --coverage --config ./test/jest-unit.json",
		"test:debug": "env NODE_ENV=testing node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./test/jest-unit.json",
		"test:e2e": "env NODE_ENV=testing jest --runInBand --config ./test/jest-e2e.json",
		"test:e2ecov": "env NODE_ENV=testing jest --runInBand --config ./test/jest-e2e.json --coverage",
		"script:demodb": "env NODE_ENV=testing jest --runInBand --config ./scripts/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "^7.6.13",
		"@nestjs/core": "^7.6.13",
		"@nestjs/cqrs": "^7.0.1",
		"@nestjs/jwt": "^7.2.0",
		"@nestjs/passport": "^7.1.5",
		"@nestjs/platform-express": "^7.6.13",
		"@nestjs/schedule": "^0.4.2",
		"@nestjs/swagger": "^4.7.15",
		"@nestjs/typeorm": "^7.1.5",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"config": "^3.3.4",
		"flat": "^5.0.2",
		"json2csv": "^5.0.6",
		"nodemailer": "^6.5.0",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"pg": "^8.5.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^6.6.6",
		"swagger-ui-express": "^4.1.6",
		"typeorm": "^0.2.31",
		"unique-names-generator": "^4.4.0"
	},
	"devDependencies": {
		"@compodoc/compodoc": "^1.1.11",
		"@nestjs/cli": "^7.5.6",
		"@nestjs/schematics": "^7.2.8",
		"@nestjs/testing": "^7.6.13",
		"@types/express": "^4.17.11",
		"@types/jest": "^26.0.20",
		"@types/node": "^14.14.31",
		"@types/supertest": "^2.0.10",
		"@typescript-eslint/eslint-plugin": "^4.16.1",
		"@typescript-eslint/parser": "^4.16.1",
		"eslint": "^7.21.0",
		"jest": "^26.6.3",
		"prettier": "^2.2.1",
		"supertest": "^6.1.3",
		"ts-jest": "^26.5.2",
		"ts-loader": "^8.0.17",
		"ts-node": "^9.1.1",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.2.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
