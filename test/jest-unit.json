{
	"moduleFileExtensions": ["ts", "tsx", "js"],
	"rootDir": "../",
	"testEnvironment": "node",
	"testMatch": ["<rootDir>/test/unit/**/*.spec.ts"],
	"transform": {
		"^.+\\.(ts|tsx)$": "ts-jest"
	},
	"collectCoverageFrom": ["src/**/*.ts", "!src/**/*.module.ts", "!src/main.ts", "!src/test"],
	"coveragePathIgnorePatterns": [],
	"globals": {
		"ts-jest": {
			"isolatedModules": true
		}
	}
}
